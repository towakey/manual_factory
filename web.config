<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- URLリライトを使用しない設定 -->
    <!-- 代わりに直接パスでアクセスする方式 -->
    
    <!-- APIディレクトリのハンドラー設定 -->
    <handlers>
      <add name="PythonHandler" path="*.py" verb="*" modules="CgiModule" scriptProcessor="C:\Python39\python.exe &quot;%s&quot; %s" resourceType="File" requireAccess="Execute" />
      <add name="APIHandler" path="api/*" verb="*" modules="CgiModule" scriptProcessor="C:\Python39\python.exe &quot;%s&quot; %s" resourceType="File" requireAccess="Execute" />
    </handlers>
    
    <!-- セキュリティヘッダー -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>
    
    <!-- MIMEタイプ設定 -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".py" mimeType="text/plain" />
    </staticContent>
    
    <!-- エラーページ -->
    <httpErrors>
      <remove statusCode="404" />
      <error statusCode="404" path="/manual_factory/index.html" responseMode="ExecuteURL" />
    </httpErrors>
    
    <!-- ディレクトリ参照 -->
    <directoryBrowse enabled="false" />
    
    <!-- 既定のドキュメント -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
        <add value="login.html" />
      </files>
    </defaultDocument>
  </system.webServer>
</configuration>
